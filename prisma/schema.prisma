// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model RepositoryCache {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  repoUrl     String   @unique
  repoName    String
  owner       String
  repo        String
  commitHash  String
  fileCount   Int
  analysisResult Json
  imageUrl    String?
  previewImageUrl String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("repository_caches")
}

model RepoSearch {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  repoUrl   String
  repoName  String
  owner     String
  repo      String
  searchedAt DateTime @default(now())
  userAgent String?
  ipAddress String?

  @@map("repo_searches")
}

model ApiUsage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime @default(now())
  apiCalls  Int      @default(0)
  tokensUsed Int?    @default(0)

  @@unique([date])
  @@map("api_usage")
}

model RepoAnalytics {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  repoUrl   String
  repoName  String
  owner     String
  repo      String
  userId    String?  // Optional: track authenticated users
  requestedAt DateTime @default(now())

  @@map("repo_analytics")
}

model UserRequestHistory {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  repoUrl   String
  repoName  String
  requestedAt DateTime @default(now())
  
  @@unique([userId, repoUrl])
  @@map("user_request_history")
}

model UserDailyStats {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique
  date      DateTime // Date only (no time)
  newRequestsUsed Int @default(0) // Number of new repos requested today
  totalRequests Int @default(0) // Total requests today
  updatedAt DateTime @updatedAt
  
  @@unique([userId, date])
  @@map("user_daily_stats")
}

model AnalysisProgress {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionId String   @unique
  progress  String
  result    Json?
  error     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("analysis_progress")
}

// NextAuth.js models
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
